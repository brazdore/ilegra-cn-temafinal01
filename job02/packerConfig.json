{
  "variables": {
    "dockerhub_repository":"",
    "dockerhub_username":"",
    "dockerhub_password":""
  },

  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "changes": [
        "EXPOSE 8089",
        "CMD [\"apache-tomcat-9.0.55/bin/catalina.sh\",\"run\"]"
        ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt update", "apt install ansible -y"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "/var/lib/jenkins/workspace/job02-infrastructure/job02/playbook.yml"
    },
    {
      "type": "file",
      "source": "/var/lib/jenkins/workspace/job02-infrastructure/job01-build/build/libs/ilegra-cn-temafinal01.war",
      "destination": "/apache-tomcat-9.0.55/webapps/ilegra-cn-temafinal01.war"
    }
  ],

  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `dockerhub_repository`}}",
        "tags": "temafinal01"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username":"{{user `dockerhub_username`}}",
        "login_password":"{{user `dockerhub_password`}}"
      }
    ]
  ]
}